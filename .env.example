# ===================================================================
# Google Generative AI (Gemini) Configuration
# ===================================================================
# Google AI Studio에서 API 키를 발급받으세요: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ===================================================================
# Application Settings
# ===================================================================
# 비디오 출력 디렉토리 (기본값: output/)
OUTPUT_DIR=output/

# 입력 비디오 디렉토리 (기본값: input/)
INPUT_DIR=input/

# ===================================================================
# Video Processing Settings
# ===================================================================
# 출력 비디오 해상도 (기본값: 1080x1920 - 세로 모드)
OUTPUT_WIDTH=1080
OUTPUT_HEIGHT=1920

# FFmpeg 비디오 코덱 (기본값: libx264)
VIDEO_CODEC=libx264

# FFmpeg 오디오 코덱 (기본값: aac)
AUDIO_CODEC=aac

# CRF 품질 설정 (낮을수록 고품질, 18-28 권장)
VIDEO_CRF=23

# ===================================================================
# AI Model Settings
# ===================================================================
# YOLO 모델 파일 경로 (기본값: best.pt - 자동으로 resources/models/에서 찾음)
YOLO_MODEL=best.pt

# 객체 탐지 신뢰도 임계값 (0.0 ~ 1.0)
DETECTION_CONFIDENCE=0.05

# ===================================================================
# External Dependencies (선택사항)
# ===================================================================
# FootAndBall 저장소 경로 (footandball detector 사용 시 필요)
# 기본값: shortsgenie의 부모 디렉토리에서 FootAndBall/ 폴더를 찾음
# FOOTANDBALL_PATH=/path/to/FootAndBall

# FFmpeg 실행 파일 경로 (시스템 PATH에 없는 경우에만 설정)
# FFMPEG_PATH=/path/to/ffmpeg

# ===================================================================
# ROI & Tracking Settings
# ===================================================================
# 공(ball) 가중치 (사람 대비 중요도)
BALL_WEIGHT=3.0

# 사람(person) 가중치
PERSON_WEIGHT=1.0

# 칼만 필터 프로세스 분산 (카메라 움직임 반응성)
KALMAN_PROCESS_VARIANCE=0.001

# 칼만 필터 측정 분산 (스무딩 정도)
KALMAN_MEASUREMENT_VARIANCE=0.1

# ===================================================================
# Audio Processing (Phase 1)
# ===================================================================

# Whisper STT Settings
# 모델 크기: tiny (가장 빠름), base (권장), small, medium, large (최고 정확도)
WHISPER_MODEL=base

# 디바이스: auto (권장), mps (Apple Silicon), cuda (NVIDIA), cpu
WHISPER_DEVICE=auto

# 언어: ko (한국어), en (영어), 또는 비워두면 자동 감지
WHISPER_LANGUAGE=ko

# Audio Highlight Filtering
# 임계값: 상위 N% 세그먼트 유지 (60 = 상위 40% 유지, 60% 감소)
AUDIO_FILTER_THRESHOLD=60

# 병합 간격: N초 이내 세그먼트 병합
AUDIO_MERGE_GAP=2.0

# 세그먼트 길이: 각 하이라이트 세그먼트 길이(초)
AUDIO_SEGMENT_DURATION=5.0

# 분석 가중치 (합이 1.0이어야 함)
# RMS 가중치: 볼륨/에너지 분석 (0.7 권장)
AUDIO_RMS_WEIGHT=0.7

# Spectral 가중치: 주파수/피치 분석 (0.3 권장)
AUDIO_SPECTRAL_WEIGHT=0.3
